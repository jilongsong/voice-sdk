{
  "name": "@your-scope/voice-sdk",
  "version": "0.1.0",
  "description": "A lightweight browser voice SDK with wake word and transcription, built with Vite.",
  "type": "module",
  "main": "dist/voice-sdk.cjs",
  "module": "dist/voice-sdk.es.js",
  "exports": {
    ".": {
      "import": "./dist/voice-sdk.es.js",
      "require": "./dist/voice-sdk.cjs"
    }
  },
  "unpkg": "dist/voice-sdk.umd.js",
  "types": "dist/types/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.types.json",
    "preview": "vite preview",
    "clean": "rimraf dist"
  },
  "keywords": ["voice", "sdk", "speech-to-text", "wake word", "transcription", "vite"],
  "author": "",
  "license": "MIT",
  "peerDependencies": {},
  "dependencies": {
    "vosk-browser": "^0.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "rimraf": "^5.0.5",
    "@types/dom-speech-recognition": "^0.0.7"
  }
}
